<div class="section-spacing">
	<div class="row">
		<div class="small-12 columns">
			<div class="blog-post-detail">
				<div class="post-title">
					<h1>{{ page.title }}</h1>
				</div>
				<div class="page-content-width rte{% if section.settings.text_justify %} description-text-justify{% endif %}">
					{{ page.content }}
				</div>
			</div>
		</div>
	</div>
</div>
{{ 'page.css' | asset_url | stylesheet_tag }}
{% schema %}
{
  "name": "Page",
  "tag": "section",
  "class": "section",
  "settings": [
	{
		"type": "checkbox",
		"id": "text_justify",
		"label": "Text Justify",
		"default": false
	}
  ]
}
{% endschema %}
