{% style %}
    .tolstoy-carousel{
        width: 100%;
    }
    .tolstoy-carousel-container{
        margin: 0 auto;
        width: 100% !important;
    }
    .tolstoy_carousel_wrapper .section_heading.row{
        margin-bottom: 0;    
    }
    .tolstoy_carousel_wrapper .section_heading{
        max-width: 1380px;
        margin-right: auto;
        margin-left: auto;
        padding: 0 15px;
        font-family: inherit;
        font-size: var(--font-size-title-mobile);
        font-weight: var(--font-weight-heading);
        line-height: var(--line-height-title);
        margin-bottom: 30px;
        line-height: 1.3;
        word-break: break-all;
    }
    .tolstoy_carousel_wrapper .section_heading .textHeading {
        color: #000;
    }
    .tolstoy_carousel_wrapper .section_heading .textLink {
        color: #4444E1;
    }
    .tolstoy_carousel_wrapper.section-padding--small {
        padding-top: 30px;
        padding-bottom: 30px;
    }
    .tolstoy_carousel_wrapper.section-padding--medium {
        padding-top: 40px;
        padding-bottom: 40px;
    }
    .tolstoy_carousel_wrapper.section-padding--large {
        padding-top: 50px;
        padding-bottom: 50px;
    }
    @media only screen and (min-width: 769px) {
        .tolstoy_carousel_wrapper .section_heading {
            padding: 0 50px;
            font-size: var(--font-size-title-desktop);
            margin-bottom: 45px;
            line-height: 1;
        }
        .tolstoy_carousel_wrapper.section-padding--small {
            padding-top: 70px;
            padding-bottom: 70px;
        }
        .tolstoy_carousel_wrapper.section-padding--medium {
            padding-top: 120px;
            padding-bottom: 120px;
        }
        .tolstoy_carousel_wrapper.section-padding--large {
            padding-top: 170px;
            padding-bottom: 170px;
        }
    }
{% endstyle %}

<div class="tolstoy_carousel_wrapper {% unless section.settings.remove_spacing == true %}section-padding--{{ section.settings.sectionPadding }}{% endunless %}" style="background: linear-gradient(0deg, {{ section.settings.section_background }} 0%, rgba(195, 231, 107, 0.00) 100%);">
    <div class="tolstoy_carousel_container row">
        <div class="section_heading">
            <a href="{{ section.settings.link }}" target="_blank" style="text-align:{{ section.settings.text_align }};"><span class="textHeading">{{ section.settings.heading }}</span> <span class="textLink">{{ section.settings.linkText }}<span></a>
        </div>
        <tolstoy-carousel
            id="{{ section.settings.publishId }}"
            class="tolstoy-carousel"
            data-product-id="{{ product.id }}">
        </tolstoy-carousel>
    </div>
</div>

{% schema %} 
{ 
    "name": "Tolstoy carousel", 
    "settings": [ 
        { 
            "type": "text", 
            "id": "publishId", 
            "label": "Publish id", 
            "default": "publishId" 
        },
        {
            "type": "color",
            "id": "section_background",
            "label": "Section background",
            "default": "#C3E76B"
        },
        {
            "type": "text",
            "id": "heading",
            "label": "Heading"
        },
        {
            "type": "text",
            "id": "linkText",
            "label": "Link Text"
        },
        {
            "type": "url",
            "id": "link",
            "label": "Link"
        },
        {
            "type": "checkbox",
            "id": "remove_spacing",
            "label": "Remove Spacing",
            "default": false
        },
        {
            "type": "radio",
            "id": "sectionPadding",
            "label": "Section Padding",
            "options": [
              {
                "value": "small",
                "label": "Small"
              },
              {
                "value": "medium",
                "label": "Medium"
              },
              {
                "value": "large",
                "label": "Large"
              }
            ],
            "default": "large"
        },
        {
            "type": "select",
            "id": "text_align",
            "label": "Text align",
            "options": [
                {
                    "value": "left",
                    "label": "Left"
                },
                {
                    "value": "center",
                    "label": "Center"
                },
                {
                    "value": "right",
                    "label": "Right"
                }
            ]
        }
    ], 
    "presets": [
        {
            "name": "Tolstoy carousel",
            "category": "Tolstoy Sections"
        }
    ] 
}
{% endschema %}